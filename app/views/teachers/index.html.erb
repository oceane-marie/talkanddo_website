<%# navbar rendered %>

<div class="search-bar">
  <%= form_with url: teachers_path, method: :get do %>
    <div class="search-section" id="location">
      <%= text_field_tag :location,
          params[:location],
          placeholder: "My city"
      %>
      <%= submit_tag "Search", class: "btn btn-primary" %>
    <% end %>
    </div>

<div data-controller="filter">
  <div class="search-section" id="language">
    <button data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Language</button>
      <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
        <%= form_with url: teachers_path, id: "form-language", data: { action: "click->filter#sortbylanguage" }, class:"form", remote: true, method: :get do |f| %>
          <div class="checkbox">
          <% @single_languages.each do |language| %>
            <%= f.label :language, language, data: { filter_target: 'languagecheckbox' } %>
            <%= check_box_tag :language, language %>
          <% end %>
          </div>
         <% end %>
      </div>
  </div>

  <div class="search-section" id="category">
    <button data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Category</button>
      <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
        <%= form_with url: teachers_path, id: "form-category", data: { action: "click->filter#sortbycategory" }, remote: true, method: :get do |f| %>
          <div class="checkbox">
            <% @single_categories.each do |category| %>
            <%= f.label :language, category, data: { filter_target: 'categorycheckbox' } %>
            <%= check_box_tag :language, category %>
          <% end %>
          </div>
        <% end %>
    </div>
  </div>

    <%= render 'teachers/list', teachers: @teachers %>
</div>
