<%# navbar rendered %>
<div class="ctr ctr-flex">
  <div class="navbar-side">
    <%= link_to teachers_path do %>
        <button class="btn btn-cherry">Find a teacher</button>
    <% end %>

    <%= link_to new_teacher_path do %>
        <button class="btn btn-cherry mb-36">Become a teacher</button>
    <% end %>

    <%= link_to as_teacher_user_path(@user) do %>
      <button>Teacher</button>
    <% end %>
  </div>

<div class="lesson-side">
  <div class="ctr-upcoming">
    <h3>Upcoming lessons</h3>
    <% @upcoming_reservations.each do |reservation| %>
      <div class="card-user">
        <%= image_tag reservation.teacher.user.img_url %>
        <div class="lesson-text">
          <p>Teacher: <%= reservation.teacher.user.first_name %><%= reservation.teacher.user.last_name %></p>
          <p>language: <%= reservation.teacher.language %></p>
          <p class="mb-12">activity: <%= reservation.teacher.activity %></p>
          <p>When: <%= reservation.date.strftime('%d/%m/%Y') %></p>
          <p>At: <%= reservation.time.strftime('%Hh%M') %></p>
          <p>Where: <%= reservation.teacher.location %></p>
          <p class="tag-upcoming"><%= reservation.state%></p>
        </div>
      </div>
    <% end %>
  </div>
  <div class="lesson-links">
    <%= link_to pending_reservations_user_path(@user) do %>
        <button class="btn-lesson" id="btn-pending">Pending reservations</button>
        <div class="tag-pending"><p><%= @past_reservations_count %></p></div>
    <% end %>

    <%= link_to past_reservations_user_path(@user) do %>
        <button class="btn-lesson">Past reservations</button>
    <% end %>
  </div>
</div>
</div>
